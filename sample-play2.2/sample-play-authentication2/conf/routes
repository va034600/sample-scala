# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /api/json1       controllers.JsonController.json1()

GET     /login                           controllers.BaseController.login
GET     /authenticate                           controllers.BaseController.authenticate
GET     /logout                           controllers.BaseController.logout

GET     /api/authenticate       controllers.BaseController.authenticateJson
GET     /api/sessionError       controllers.BaseController.sessionErrorJson
GET     /api/logout                           controllers.BaseController.logoutJson


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
